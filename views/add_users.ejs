<%- include('layout/footer') %>
<div class="container">
   <div class="row">
     <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-primary">
             <h3 class="text-light">Adicionar novo Jogador</h3>
          </div>
          <div class="card-body p-4">
             <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="nome">Nome</label>
                  <input type="text" name="nome" class="form-control form-control-lg"  placeholder="Nome do Jogador" required />
                </div>

                <div class="mb-3">
                  <label for="posicao">Posição</label>
                  <input type="text" name="posicao" class="form-control form-control-lg"  placeholder="Digite a posição do jogador" required />
                </div>

                <div class="mb-3">
                    <label for="email">Contato</label>
                    <input type="text" name="email" class="form-control form-control-lg"  placeholder="Email ou telefone" required />
                </div>
                 
                <div class="mb-3">
                    <label for="Telefone">Idade</label>
                    <input type="tel" name="Telefone" class="form-control form-control-lg"  placeholder="Insira a idade" required />
                </div>


                <div class="mb-3">
                    <label for="image" class="form-label">Selecione uma imagem</label>
                    <input type="file" name="image" class="form-control form-control-lg" required />
                  </div>
                 
                  <div class="mb-3 d-grid">
                   
                    <input type="submit" name="submit" value = "Adicionar Usuario" class="btn btn-primary btn-lg" />
                  </div>

             </form>
          </div>
        </div>
     </div>
   </div>
</div>